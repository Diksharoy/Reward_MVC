@model Category
<form method="post">
    @if(TempData["success"] != null)
    {
        <h2>@TempData["Success"]</h2>
    }
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            <hr />
        </div>
@*         <div asp-validation-summary="All"></div>
 *@        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input  asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"class="text-danger"></span> <!--this is server side validation-->
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control"> Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> Back To List</a>
            </div>
        </div>
    </div>
</form>



